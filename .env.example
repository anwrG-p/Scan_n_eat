# --- DATABASE ---
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=postgres

# --- SPRING BOOT SERVICES ---
# URL for services to connect to Postgres
# Note: Inside docker-compose, use 'jdbc:postgresql://postgres:5432/db_name'
# For local development (outside docker), use 'jdbc:postgresql://localhost:5432/db_name'
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/auth_db
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=password
SPRING_JPA_HIBERNATE_DDL_AUTO=update

# Service Port (default for all microservices)
SERVER_PORT=8080

# --- REDIS ---
SPRING_DATA_REDIS_HOST=redis
SPRING_DATA_REDIS_PORT=6379

# --- FRONTEND ---
# API URL for the frontend to connect to the Gateway
VITE_API_URL=/api/v1

# --- OCR SERVICE ---
FLASK_ENV=development
